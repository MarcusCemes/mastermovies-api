    "escape-string-regexp": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.4",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.1.0",
    "ms": "^2.1.2",
    "nanoid": "^2.1.1",
    "nodemailer": "^6.3.0",
    "objection": "^1.6.9",
    "p-event": "^4.1.0",
    "pg": "^7.12.1",
    "pino": "^5.13.3",
    "rate-limiter-flexible": "^1.1.1",
    "send": "^0.17.1",
    "source-map-support": "^0.5.13",
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "@types/convict": "^4.2.1",
    "@types/csrf": "^1.3.2",
    "@types/hapi__joi": "^15.0.4",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa__router": "^8.0.0",
    "@types/ms": "^0.7.31",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.7.5",
    "@types/nodemailer": "^6.2.1",
    "@types/pg": "^7.11.1",
    "@types/pino": "^5.8.10",
    "@types/send": "^0.14.5",
    "@types/stoppable": "^1.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "trash-cli": "^3.0.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "clean": "trash build test",
    "fix": "run-s fix:*",
    "fix:style": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project .",
    "test:style": "prettier \"src/**/*.ts\" --check",
    "test:unit": "echo \"No unit tests have been set up\"",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "start": "node -r dotenv/config -r source-map-support/register ."
  },
  "scripts-info": {
    "build": "Clean and rebuild the project",
    "clean": "Clean up the build and test files",
    "fix": "Try to automatically fix any style and linting problems",
    "test": "Check style, lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "start": "Launch the application"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "license": "UNLICENSED",
  "keywords": [
    "mastermovies",
    "api",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcusCemes/mastermovies-api"
  },
  "bugs": {
    "url": "https://github.com/MarcusCemes/mastermovies-api/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
