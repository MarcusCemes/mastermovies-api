{
  "name": "mastermovies-api",
  "private": true,
  "description": "The MasterMovies Node.js API",
  "version": "2.0.0",
  "author": "Marcus Cemes <marcus.cemes@gmail.com>",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "hpp": "^0.2.2",
    "jsonwebtoken": "^8.5.1",
    "mime": "^2.4.4",
    "node-object-hash": "^1.4.2",
    "nodemailer": "^6.2.1",
    "pg": "^7.11.0",
    "rate-limiter-flexible": "^1.0.3"
  },
  "devDependencies": {
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.6.2",
    "@types/nodemailer": "^6.2.0",
    "@types/pg": "^7.4.14",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "trash-cli": "^3.0.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "echo \"No unit tests have been set up\"",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "start": "node -r dotenv/config .",
    "clean": "trash build test"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "start": "Launch the application"
  },
  "engines": {
    "node": ">=8.9"
  },
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "license": "UNLICENSED",
  "keywords": [
    "mastermovies",
    "api",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcusCemes/mastermovies-api"
  },
  "bugs": {
    "url": "https://github.com/MarcusCemes/mastermovies-api/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
